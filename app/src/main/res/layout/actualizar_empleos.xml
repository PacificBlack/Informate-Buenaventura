<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".actualizar.ActualizarEmpleos">

    <Toolbar
        android:id="@+id/toolbar_actualizar_empleos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:titleTextColor="@color/blanco"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.PopupOverlay" />


    <ScrollView
        android:paddingTop="@android:dimen/app_icon_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/imagenprimera"
                    android:text="Publica una desaparición en nuestra app"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imagenprimera"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_login_hero" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/actualizar_id_empleos"
                        android:layout_width="314dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/screen_background_light_transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="308dp"
                            android:layout_height="wrap_content"
                            android:hint="Ingrese el id de la publicación que desea modificar o eliminar"
                            android:inputType="text|number"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/actualizar_buscar_empleos"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_search_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>




                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/actualizar_titulo_empleos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="120"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="@string/inserte_titulo"
                            android:inputType="textPersonName" />


                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/actualizar_descripcion_empleos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="700"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="@string/inserte_descripcion1"
                            android:inputType="textMultiLine|textNoSuggestions" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <GridView
                        android:id="@+id/actualizar_grid_empleos"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:columnWidth="200dp"
                        android:numColumns="1"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/imagen1_actualizar_empleos"
                                android:layout_width="409dp"
                                android:layout_height="280dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitStart"
                                tools:src="@tools:sample/backgrounds/scenic[14]" />

                        </LinearLayout>
                    </HorizontalScrollView>


                    <Button
                        android:id="@+id/subir_imagenes_actualizar_empleos"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/blanco"
                        android:background="@drawable/estilo_botones"
                        android:text="Actualizar imagenes (Opcional)" />


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecione la necesidad con la que precisa un empleado:" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <RadioGroup
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <RadioButton
                                android:id="@+id/opcion1_necesidad_empleos_actualizar"
                                android:layout_width="211dp"
                                android:layout_height="wrap_content"
                                android:text="RadioButton" />

                            <RadioButton
                                android:id="@+id/opcion2_necesidad_empleos_actualizar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RadioButton" />
                            <RadioButton
                                android:id="@+id/opcion3_necesidad_empleos_actualizar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RadioButton" />

                        </RadioGroup>

                    </LinearLayout>


                    <Button
                        android:id="@+id/actualizar_empleos"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/blanco"
                        android:layout_gravity="center"
                        android:background="@drawable/estilo_botones"
                        android:text="Actualizar Empleo" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Contactanos"
                    android:textAlignment="center"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsapp"
                    android:id="@+id/whatsapp_actualizar_empleos"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>