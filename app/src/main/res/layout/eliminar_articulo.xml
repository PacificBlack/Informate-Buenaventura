<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#E91E63"
    android:orientation="vertical"
    tools:context=".eliminar.EliminarArticulo">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eliminar_id_comprayventa"
            android:layout_width="314dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/screen_background_light_transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese el id de la publicación que desea modificar o eliminar"
                android:inputType="text|number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/eliminar_buscar_comprayventa"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_search_black_24dp"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/eliminar_titulo_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/inserte_titulo"
                     />


                <TextView
                    android:id="@+id/eliminar_descripcioncorta_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/inserte_corta"
                    />


                <TextView
                    android:id="@+id/eliminar_precio_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                     />


                <TextView
                    android:id="@+id/eliminar_contacto_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                     />

                <TextView
                    android:id="@+id/eliminar_ubicacion_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Ingrese la ubicación donde se puede comprar"
                    />

                <TextView
                    android:id="@+id/eliminar_cantidad_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Ingrese cuantos articulos tiene disponible"
                     />


            <HorizontalScrollView
                android:id="@+id/imagenes_eliminar_comprayventa"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagen1_eliminar_comprayventa"
                        android:layout_width="409dp"
                        android:layout_height="280dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitStart"
                        tools:src="@tools:sample/backgrounds/scenic[14]" />

                    <ImageView
                        android:id="@+id/imagen2_eliminar_comprayventa"
                        android:layout_width="409dp"
                        android:layout_height="280dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitStart"
                        tools:src="@tools:sample/backgrounds/scenic" />
                    <ImageView
                        android:id="@+id/imagen3_eliminar_comprayventa"
                        android:layout_width="409dp"
                        android:layout_height="280dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitStart"
                        tools:src="@tools:sample/backgrounds/scenic" />
                </LinearLayout>

            </HorizontalScrollView>



                <TextView
                    android:id="@+id/eliminar_descripcion_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/inserte_descripcion1"
                    />


                <TextView
                    android:id="@+id/eliminar_descripcionextra_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/inserte_descripcion2"
                    />


                <ImageButton
                    android:id="@+id/eliminar_comprayventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@android:drawable/ic_menu_delete" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>