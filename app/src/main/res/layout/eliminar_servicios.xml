<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F342F"
    android:orientation="vertical"
    tools:context=".eliminar.EliminarServicios">

    <Toolbar
        android:id="@+id/toolbar_eliminar_servicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#4F342F"
        android:titleTextColor="@color/blanco"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.PopupOverlay" />

    <ScrollView
        android:paddingTop="@android:dimen/app_icon_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="199dp"
                    android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-2dp"
                    android:layout_toStartOf="@+id/imagenprimera"
                    android:text="Actualiza un Servicio"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="24sp"
                    android:fontFamily="@font/righteous" />

                <ImageView
                    android:id="@+id/imagenprimera"
                    android:layout_width="190dp"
                    android:layout_height="231dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    app:srcCompat="@drawable/serviciosicono"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/id_eliminar_servicios"
                            android:layout_width="314dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@android:drawable/screen_background_light_transparent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="308dp"
                                android:fontFamily="@font/ubuntu"
                                android:layout_height="wrap_content"
                                android:hint="Ingrese el id de la publicación que desea modificar o eliminar"
                                android:inputType="text|number"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageButton
                            android:id="@+id/eliminar_buscar_servicios"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_search_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/eliminar_titulo_servicios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:text="Aqui va el titulo de su publicación"  />

                    <TextView
                        android:id="@+id/eliminar_descripcion_servicios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:text="Aqui va la descripcion de su publicación"/>

                    <TextView
                        android:id="@+id/eliminar_necesidad_servicios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:text="Aqui va la necesidad de su publicacíon"/>


                    <ImageButton
                        android:id="@+id/imagen1_eliminar_servicios"
                        android:layout_width="409dp"
                        android:layout_height="280dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        tools:src="@tools:sample/backgrounds/scenic[14]" />

                    <Button
                        android:id="@+id/eliminar_final_servicios"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/blanco"
                        android:layout_gravity="center"
                        android:background="@drawable/estilo_botones"
                        android:text="Eliminar Servicio" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Contactanos"
                    android:textAlignment="center"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsapp"
                    android:id="@+id/whatsapp_eliminar_servicios" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>