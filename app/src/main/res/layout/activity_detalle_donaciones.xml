<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulOscuro"
    tools:context=".actividades.DetalleDonaciones">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lineardetalledonaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_detalle_donaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cabin_semibold"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@color/blanco"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imagen1_detalle_donaciones"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="10dp"
                android:background="#0E0B16"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/backgrounds/scenic[2]" />


            <com.google.android.gms.ads.AdView
                android:id="@+id/baner_donacion1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_donacion"></com.google.android.gms.ads.AdView>

            <TextView
                android:id="@+id/descricion1_detalle_donaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="13sp"
                android:textColor="#FFFFFF" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/baner_donacion2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_donacion"></com.google.android.gms.ads.AdView>

            <ImageButton
                android:id="@+id/imagen2_detalle_donaciones"
                android:layout_width="409dp"
                android:layout_height="280dp"
                android:scaleType="fitCenter"
                android:background="#0E0B16"
                android:layout_marginTop="10dp"
                tools:src="@tools:sample/backgrounds/scenic[14]" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/palanquin_medium"
                android:textColor="@color/blanco"
                android:text="Meta que se desea alcanzar:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/meta_detalle_donaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/blanco"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textSize="13sp"  />

            <com.google.android.youtube.player.YouTubePlayerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/video_donaciones"/>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>